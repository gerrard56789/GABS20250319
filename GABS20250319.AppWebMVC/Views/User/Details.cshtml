@model GABS20250319.AppWebMVC.Models.User

@{
    ViewData["Title"] = "Details";
}

<style>
    body{
        background-image: url(https://img.freepik.com/foto-gratis/puesta-sol-siluetas-arboles-montanas-ia-generativa_169016-29371.jpg?t=st=1742689136~exp=1742692736~hmac=35fe82704cfdb9f867c317b370b90f54bdceb550068035a6959b04d563d11b1e&w=1060);

</style>
<div class="container">
  <h1 class="text-center mb-4 text-white">Detalles del Usuario</h1>
  <hr class="border-white">

  <table class="table table-bordered ">
    <tbody>
      <tr>
        <th scope="row" class="text-white">Nombre de usuario</th>
        <td class="text-white">@Html.DisplayFor(model => model.Username)</td>
      </tr>
      <tr>
        <th scope="row" class="text-white">Correo electrónico</th>
        <td class="text-white">@Html.DisplayFor(model => model.Email)</td>
      </tr>
      <tr>
        <th scope="row" class="text-white">Contraseña</th>
        <td class="text-white">@Html.DisplayFor(model => model.PasswordHash)</td>
      </tr>
      <tr>
        <th scope="row" class="text-white">Rol</th>
        <td class="text-white">@Html.DisplayFor(model => model.Role)</td>
      </tr>
    </tbody>
  </table>

  <div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model?.UserId" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary ml-2">Volver a la lista</a>
  </div>
</div>